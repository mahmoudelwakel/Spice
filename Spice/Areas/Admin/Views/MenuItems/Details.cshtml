         <div class="form-group row">
            <div class="col-4 ">
                <label asp-for="MenuItem.CateogryId" class="col-form-label"></label>
            </div>
            <div class="col-8">
               <select disabled id="ddlCategories" asp-for="MenuItem.CateogryId"asp-items="@(new SelectList(Model.CategoryList,"Id","Name"))" class="form-control"></select>
               
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="MenuItem.SubCategoryId" class="col-form-label"></label>
            </div>
            <div class="col-8">
               <select disabled id="ddlSubCategories" asp-for="MenuItem.SubCategoryId"asp-items="@(new SelectList(Model.SubCategoryList,"Id","Name"))" class="form-control"></select>
              
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 ">
                <label asp-for="MenuItem.Spicyness" class="col-form-label"></label>
            </div>
            <div class="col-8">
               <select disabled id="ddlSubCategories" asp-for="MenuItem.Spicyness"asp-items="@Html.GetEnumSelectList<MenuItem.Espicy>()" class="form-control"></select>
        
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-8 offset-4">
                <partial name="_UpdateAndBackToListButtonsPartial"model="@Model.MenuItem.Id" />
            </div>

        </div>
        </div>
        <div class="col-3 offset-1">
            <img src="@Model.MenuItem.Image"style="width:100%;border:1px solid #ddd;border-radius:10px" />
        </div>
    </div>

