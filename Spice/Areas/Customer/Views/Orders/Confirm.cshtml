@model OrderDetailViewModel
@{
    ViewData["Title"] = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

<div class="whiteBackground">
    <div class="row px-3">
        <div class="col-8">
            <h2 class="text-info">Order Confirmed</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Index" asp-controller="Home" class="btn btn-success form-control">New Order</a>
        </div>

    </div>
    @if(Model.OrderHeader != null)
    {
        <div class="p-3"style="color:maroon">
            Your Order Has been Confirmed !Please see The Order Summray bellow
            <br>
            Fell Free To Contacu Us If You Have any Question
            
        </div>
        <partial name="_IndividualOrderDetails"model="Model"/>
        
    }
   
    else{
        <div class="text-danger">
            Error..... Please Try Again
            </div>
    }

</div>

